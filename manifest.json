{
  "manifest_version": 3,
  "name": "React Components Inspector",
  "version": "1.0",
  "description": "Hold Alt/Option and hover to see React component names (Dev Mode).",
  "icons": {
    "16": "images/favicon-16x16.png",
    "32": "images/favicon-32x32.png",
    "48": "images/android-chrome-192x192.png",
    "128": "images/android-chrome-192x192.png"
  },
  "action": {
    "default_icon": {
      "16": "images/favicon-16x16.png",
      "32": "images/favicon-32x32.png"
    },
    "default_title": "React Components Inspector"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["hook.js", "inspector.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
